<h1>Edit Your Experience</h1>
<div>
<%= simple_form_for @product, :html => { :multipart => true } do |f| %>
<%= f.select :category_id, @categories%>
<%= f.file_field :product_img %>
<%= f.label :"Establishment" %>
<%= f.text_field :subject%>
<%= f.label :"Place" %>
<%= f.text_field :place %>
<%= f.label :"Name of Staff (if any)" %>
<%= f.text_field :name %>
<%= f.label :"Your name" %>
<%= f.text_field :country %>
<%= f.label :"Your experience" %>
<%= f.text_field :description %>

<%= f.submit "Submit", class: "btn btn-primary" %>
<%end%>
</div>
