<div class="row">

  <div class="col-md-4">
  <%=image_tag @product.product_img.url(:product_index), class: "product-show"%>
</div>

<div class="col-md-8">
<h2><%= @product.subject %></h2>
<h3><%= @product.place %></h3>
<p><strong>Category: </strong></p>
<p><%= @product.category.name %></p>
<p><strong>Your experience: </strong></p>
<p><%= @product.description %></p>
<p><strong>From: </strong></p>
<p><%= @product.name %></p>
</div>
</div>


<div class="row">

  <div class="col-md-4">

    <%= render @product.reviews %>

<div>
  <%= link_to "Add Review", new_product_review_path(@product)%>
</div>

<%= link_to "Back", root_path(@product) %>
<% if user_signed_in? %>
<%if @product.user_id == current_user.id %>
<%= link_to "Edit", edit_product_path(@product) %>
<%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
<% end %>

<script>
$('.review-rating').raty({
  readOnly: true,
  score: function() {
  return $(this).attr('data-score');
},
path: '/assets/'

});
</script>
